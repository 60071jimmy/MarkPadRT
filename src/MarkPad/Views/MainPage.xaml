<Page
    x:Class="MarkPad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f9f9f9">
		<Grid Margin="0">
			<Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*" />
				<ColumnDefinition Width="40*" />
				<ColumnDefinition Width="40*" />
			</Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="White">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="37,12,0,0" Foreground="#FFBE0606" Style="{StaticResource PageHeaderTextStyle}">
			        <Run Text="MarkPad"/>
                </TextBlock>
            </Grid>
            <RichEditBox x:Name="tx" Grid.Column="1" Background="#f9f9f9" BorderThickness="0" BorderBrush="{x:Null}" Padding="25" TextChanged="tx_TextChanged_2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" AcceptsReturn="True"  />
            <Border Background="#eaeaea" Grid.Column="2" >
                <WebView x:Name="wv" Margin="15" />
            </Border>
		</Grid>

	</Grid>
</Page>

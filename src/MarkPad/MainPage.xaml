<Page
    x:Class="MarkPad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
    	<Grid.Background>
			<LinearGradientBrush StartPoint="0,0" EndPoint="0,150" MappingMode="Absolute">
				<LinearGradientBrush.GradientStops>
					<GradientStop Color="#FFDEDEDE" />
					<GradientStop Color="#FFFFFFFF" Offset="1" />
				</LinearGradientBrush.GradientStops>
			</LinearGradientBrush>
    	</Grid.Background>

		<Grid Margin="50,95,50,50">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50*" />
				<ColumnDefinition Width="50*" />
			</Grid.ColumnDefinitions>
            <RichEditBox x:Name="tx" TextChanged="tx_TextChanged_2"  BorderBrush="Black" ScrollViewer.HorizontalScrollBarVisibility="Disabled"   BorderThickness="1" AcceptsReturn="True"  Margin="0,0,50,0" />
            <Border  BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="0,0,50,0" >
                <WebView x:Name="wv" />
            </Border>
			
		</Grid>
		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="55,30,0,0" Foreground="#FFBE0606" Style="{StaticResource PageHeaderTextStyle}">
			<Run Text="MarkPad"/>
		</TextBlock>
	</Grid>
</Page>
